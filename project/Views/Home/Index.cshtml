
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Customer/Views/Home/Index.cshtml";
}

@model IEnumerable<SanPham>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Mô tả</th>
                <th>Giá</th>
                <th>Thể loại</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.price</td>
                    <td><img src="@item.ImageUrl" width="200px" /></td>
                    <td>@item.TheLoai.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>

