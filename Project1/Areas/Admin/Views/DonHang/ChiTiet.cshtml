@model HoaDon

<div>
    <h4 class="text-white">Thông tin khách hàng</h4>
    <dl class="row text-white">
        <dt class="col-sm-2">
            <a @Html.DisplayNameFor(model => model.ApplicationUser.Name)>Tên Khách Hàng</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Name)  
        </dd>
        <dt class="col-sm-2">
            <a @Html.DisplayNameFor(model => model.PhoneNumber)>Số điện thoại</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)  
        </dd>
        <dt class="col-sm-2">
            <a @Html.DisplayNameFor(model => model.Address)> Địa Chỉ</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address) 
        </dd>
        <dt class="col-sm-2">
            <a @Html.DisplayNameFor(model => model.OrderStatus)>Trạng thái</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderStatus)  
        </dd>
    </dl>
</div>

<div>
    <h4 class="text-white">Danh sách sản phẩm</h4>

    @if (Model.ChiTietHoaDon != null && Model.ChiTietHoaDon.Any())
    {
        <table class="table col-md-8 text-white">
            <thead>
                <tr>
                    <th width="200">Tên sản phẩm</th>
                    <th width="100">Số lượng</th>
                    <th width="16,6">Đơn giá</th>
                    <th width="16,6">Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ChiTietHoaDon)

                {
                    <tr>
                        <td>@item.SanPham.Name</td>
                        <td>@item.Quantity</td>
                        <td class="text-danger">@item.SanPham.Price.ToString("N0")đ</td>
                        <td class="text-danger">@item.ProductPrice.ToString("N0")đ</td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>

<h4 class="text-danger">Tổng tiền: @Model.Total.ToString("N0")đ</h4>
<a asp-action="Index" class="btn btn-primary">Quay Lại</a>